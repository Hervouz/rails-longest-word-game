<h1>NEW GAME</h1>

<% @letters.each do |letter| %>

  <div class="random">
    <%= letter.capitalize %>
  </div>

<% end %>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="question_game">What is the longest word you can find ?</label>
  <div class="blocka">
    <input type="text" name="word" >
    <input type="hidden" name="caca" value=<%= @letters.join %>>
    <input type="submit" value="Play">
  </div>
</form>


